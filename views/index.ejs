<!doctype html> 
<html lang="en">
    <head>
        <%- include('partials/head')%>
        <link rel="stylesheet" href="css/clock.css">
    </head>

    <body class="c-app">

        <div class="c-sidebar c-sidebar-dark c-sidebar-show c-sidebar-fixed">
            <%- include('partials/sidebar')%>
        </div>

        <div class="c-wrapper">

            <%- include('partials/alert')%>

            <header>
                <div class="container-fluid">
                    <nav aria-label="breadcrumb">
                    <ol class="breadcrumb my-0 ms-2">
                        <li class="breadcrumb-item">
                        <!-- if breadcrumb is single--><span>Home</span>
                        </li>
                        <li class="breadcrumb-item active"><span>Dashboard</span></li>
                    </ol>
                    </nav>
                </div>
            </header>

            <div class="c-body">

                <main class="c-main">
        
                    <div class="container-fluid">

                        <div class="card-deck">

                            <div class="card bg-warning text-white">
                                <div class="card-body">
                                    <div id="text-current-light-sensor-value" style="font-size: 2rem; font-weight: 700;">Getting...</div>
                                    <div>Light</div>
                                    <img src="barchart.png" alt="barchart" style="height: 5rem; width: 100%;">
                                </div>
                            </div>

                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <div id="text-current-soil-humidity-sensor-value" style="font-size: 2rem; font-weight: 700;">Getting...</div>
                                    <div>Soil Humidity</div>
                                    <img src="linegraph.png" alt="linegraph" style="height: 5rem; width: 100%;">
                                </div>
                            </div>

                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <div id="text-current-temperature-sensor-value" style="font-size: 2rem; font-weight: 700;">Getting...</div>
                                    <div>Temperature</div>
                                    <img src="areachart.png" alt="areachart" style="height: 5rem; width: 100%;">
                                </div>
                            </div>

                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <div id="text-current-air-humidity-sensor-value" style="font-size: 2rem; font-weight: 700;">Getting...</div>
                                    <div>Air Humidity</div>
                                    <img src="curvedlinegraph.png" alt="curvedlinegraph" style="height: 5rem; width: 100%;">
                                </div>
                            </div>

                        </div>

                        <hr>

                        <div class="card-deck">

                          <div class="card">
                              <div class="card-body">

                                  <table class="table table-borderless table-striped" id="tableOfLightSensorDeviceData">
                                      <thead class="thead-dark">
                                          <tr>
                                          <th scope="col">Time</th>
                                          <th scope="col">Device ID</th>
                                          <th scope="col">Value</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                      </tbody>
                                  </table>

                              </div>
                          </div>

                          <div class="card">
                              <div class="card-body">

                                  <table class="table table-borderless table-striped" id="tableOfSoilHumiditySensorDeviceData">
                                      <thead class="thead-dark">
                                          <tr>
                                          <th scope="col">Time</th>
                                          <th scope="col">Device ID</th>
                                          <th scope="col">Value</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                      </tbody>
                                  </table>

                              </div>
                          </div>

                          <div class="card">
                              <div class="card-body">

                                  <table class="table table-borderless table-striped" id="tableOfTemperatureSensorDeviceData">
                                      <thead class="thead-dark">
                                          <tr>
                                          <th scope="col">Time</th>
                                          <th scope="col">Device ID</th>
                                          <th scope="col">Value</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                      </tbody>
                                  </table>

                              </div>
                          </div>

                          <div class="card">
                              <div class="card-body">

                                  <table class="table table-borderless table-striped" id="tableOfAirHumiditySensorDeviceData">
                                      <thead class="thead-dark">
                                          <tr>
                                          <th scope="col">Time</th>
                                          <th scope="col">Device ID</th>
                                          <th scope="col">Value</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                      </tbody>
                                  </table>

                              </div>
                          </div>

                        </div>

                    </div>
                </main>
            </div>

            <footer class="c-footer">
                <%- include('partials/footer')%>
            </footer>

        </div>

        <!-- Optional JavaScript -->
        <!-- Popper.js first, then CoreUI JS
        <script src="https://unpkg.com/@popperjs/core@2"></script>
        <script src="https://unpkg.com/@coreui/coreui/dist/js/coreui.min.js"></script>
        -->

        <!--
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.2.1/chart.min.js"></script>
        <script src="sensor_data.js"></script>
        <script src="index.js"></script>
        -->
        <script src="/socket.io/socket.io.js"></script>
        <script src="index.js"></script>
    </body>
</html>