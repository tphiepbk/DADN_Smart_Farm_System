<!doctype html>
<html lang="en">
    <head>
        <%- include('partials/head')%>
    </head>

    <body class="c-app">

        <div class="c-sidebar c-sidebar-dark c-sidebar-show c-sidebar-fixed">
            <%- include('partials/sidebar')%>
        </div>

        <div class="c-wrapper">

            <header>
                <div class="container-fluid">
                    <nav aria-label="breadcrumb">
                    <ol class="breadcrumb my-0 ms-2">
                        <li class="breadcrumb-item">
                        <!-- if breadcrumb is single--><span>Utilities</span>
                        </li>
                        <li class="breadcrumb-item active"><span>Prediction</span></li>
                    </ol>
                    </nav>
                </div>
            </header>

            <div class="c-body">
                <main class="c-main">
                    <div class="container-fluid">

                        <div class="card-deck">

                            <div class="card border-danger">
                                <div class="card-header"><strong>Current State</strong></div>

                                <div class="card-body">
                                    <p>Hello</p>
                                </div>
                            </div>

                            <div class="card border-warning">
                                <div class="card-body">

                                    <p><strong class="card-text">Load model</strong></p>
                                    <button type="button" onclick="loadData()" class="btn btn-info"><span class="cil-power-standby btn-icon mr-2"></span> Turn on</button>

                                    <label for="fname">Soil value </label>
                                    <input type="text" id="soil_value"><br><br>
                                    <label for="lname">Light value </label>
                                    <input type="text" id="light_value"><br><br>

                                    <input type="submit" value="Submit Soil Data" onclick="proceedSoilData()">
                                    <input type="submit" value="Submit Light Data" onclick="publishLightData()">
                                </div>
                            </div>

                            <div class="card border-success" id="manual-switch" style="pointer-events: none; opacity: 0.5;">
                                <div class="card-body">

                                    <p><strong class="card-text">Input</strong></p>
                                </div>
                            </div>

                        </div>

                    </div>

                    <br>

                    <div class="container-fluid">
                        <div class="card">
                            <div class="card-body">
                                <p>hello</p>
                            </div>
                        </div>
                    </div>
                </main>
            </div>

            <footer class="c-footer">
                <%- include('partials/footer')%>
            </footer>
        </div>

        <!-- Optional JavaScript -->
        <!-- Popper.js first, then CoreUI JS 
        <script src="https://unpkg.com/@popperjs/core@2"></script>
        <script src="https://unpkg.com/@coreui/coreui/dist/js/coreui.min.js"></script>
        -->
        <script src="prediction.js"></script>
    </body>
</html>